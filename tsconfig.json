{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
  },
  "include": ["src"]
}
